@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudDatePicker Label="Primary Editor Payment Date"
        Variant="Variant.Outlined" @bind-Date="_PrimaryEditorPaymentDate"
        Class="mt-3" Clearable="true"
        Required="false" />
        <MudDatePicker Label="Secondary Editor Payment Date"
        Variant="Variant.Outlined" @bind-Date="_SecondaryEditorPaymentDate"
        Class="mt-3" Clearable="true"
        Required="false" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Color=Color.Error OnClick="Cancel" Disabled="processing">Cancel</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Info" OnClick="Submit" Disabled="processing">@(processing ? "Saving.." : "Save")</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public List<Project> projects { get; set; }
    private DateTime? _PrimaryEditorPaymentDate = DateTime.Today;
    private DateTime? _SecondaryEditorPaymentDate = DateTime.Today;
    bool processing;
    private async Task Submit()
    {
        var projectNames = projects.Select(x => x.ProjectName).ToList();

        var grouped = projectNames
            .Select((name, index) => new { name, index })
            .GroupBy(x => x.index / 2)
            .Select(g => string.Join(", ", g.Select(x => x.name)));

        var formattedMessage = string.Join("<br />", grouped);

        var parameters = new DialogParameters
        {
            { "Message", $"Are you sure you want to change these projects payment date for existing editors? <br /><br /> {formattedMessage}" }
        };
        var dialog = await DialogService.ShowAsync<ConfirmationDialog>("Confirmation", parameters);
        var result = await dialog.Result;

        if (result.Canceled)
        {
            return;
        }

        foreach(var project in projects)
        {
            if(project.PrimaryEditorId != null && _PrimaryEditorPaymentDate != null)
            {
                project.PrimaryEditorDetails.DatePaidEditor = DateTime.SpecifyKind(_PrimaryEditorPaymentDate.Value, DateTimeKind.Utc);
            }
            if (project.SecondaryEditor != null && _SecondaryEditorPaymentDate != null)
            {
                project.SecondaryEditorDetails.DatePaidEditor = DateTime.SpecifyKind(_SecondaryEditorPaymentDate.Value, DateTimeKind.Utc);
            }
        }
        MudDialog.Close(DialogResult.Ok(projects));
    }

    private void Cancel() => MudDialog.Cancel();

}
