<MudDialog>
    <DialogContent>
        <MudGrid Class="mt-5" Style="flex-direction:column;" >
        <MudTextField Label="Project Name" Variant="Variant.Outlined" T="string" Value="@project.ProjectName" ReadOnly="!isAdmin" />
        <MudTextField Label="Client Name" Variant="Variant.Outlined" T="string" Value="@project.Client.UserName" ReadOnly="!isAdmin" />
        <MudTextField Label="Primary Editor" Variant="Variant.Outlined" T="string" Value="@project.PrimaryEditor?.UserName" ReadOnly="!isAdmin" />
        <MudTextField Label="Secondary Editor" Variant="Variant.Outlined" T="string" Value="@project.SecondaryEditor?.UserName" ReadOnly="!isAdmin" />
        <MudTextField Label="Shoot Date" Variant="Variant.Outlined" T="DateTime?" Value="@project.ShootDate" ReadOnly="!isAdmin" />
        <MudTextField Label="Due Date" Variant="Variant.Outlined" T="DateTime?" Value="@project.DueDate" ReadOnly="!isAdmin" />
        <MudDateRangePicker @bind-DateRange="@project.Range" Margin="Margin.Dense" Clearable="true"
        PlaceholderStart="Start Date" PlaceholderEnd="End Date" Label="Date Range"Variant="Variant.Outlined" />
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color=Color.Error Variant="Variant.Outlined" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Info" Variant="Variant.Outlined" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public Project project { get; set; } = new();
    [Parameter] public bool isAdmin { get; set; }


    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(project));
    }

    private void Cancel() => MudDialog.Cancel();

 
}
