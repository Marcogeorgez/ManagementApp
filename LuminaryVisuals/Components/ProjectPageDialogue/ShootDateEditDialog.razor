<MudDialog>
    <DialogContent>
            <MudDatePicker Label="Shoot Date"
                           Variant="Variant.Outlined"
                           Date="@ShootDate"
                           DateChanged="@(date => ShootDate = date.Value)"
                           Class="mt-3"
                           Required="false" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined"Color=Color.Error OnClick ="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Info" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    DateTime? date;
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public DateTime ShootDate { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(ShootDate));
    }

    private void Cancel() => MudDialog.Cancel();
}
