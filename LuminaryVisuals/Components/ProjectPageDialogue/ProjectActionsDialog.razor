<MudDialog>
    <DialogContent>
        <MudStack Spacing="2">
            @if (_isAdminView || _isEditorView)
            {
                <MudButton StartIcon="@Icons.Material.Outlined.FileCopy" OnClick="@(() => ReturnAction("CopyName"))">
                    Copy Project Name to Clipboard
                </MudButton>
                <MudButton StartIcon="@Icons.Material.Filled.WatchLater" OnClick="@(() => ReturnAction("Logging"))">
                    Logging hours
                </MudButton>

            }

            @if (_isArchived && _isAdminView)
            {
                <MudButton StartIcon="@Icons.Material.Filled.Archive" OnClick="@(() => ReturnAction("Unarchive"))">
                    Unarchive
                </MudButton>
                <MudButton StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => ReturnAction("Delete"))">
                    Delete
                </MudButton>
            }
            else if (!_isArchived && (_isAdminView || _isClientView))
            {
                <MudButton StartIcon="@Icons.Material.Filled.Archive" OnClick="@(() => ReturnAction("Archive"))">
                    Archive
                </MudButton>
                <MudButton StartIcon="@Icons.Material.Filled.ContentCopy" OnClick="@(() => ReturnAction("Duplicate"))">
                    Duplicate
                </MudButton>
            }

            @if (!_isArchived)
            {
                <MudButton StartIcon="@Icons.Material.TwoTone.Edit" OnClick="@(() => ReturnAction("Edit"))">
                    Edit Row
                </MudButton>
            }
        </MudStack>
    </DialogContent>
    <DialogActions>

        <MudButton Variant="Variant.Outlined" Color=Color.Error OnClick="Cancel" Style="margin-top:1rem">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public Project Item { get; set; } = default!;
    [Parameter] public string CurrentUserId { get; set; } = default!;
    [Parameter] public bool _isAdminView { get; set; }
    [Parameter] public bool _isEditorView { get; set; }
    [Parameter] public bool _isClientView { get; set; }
    [Parameter] public bool _isArchived { get; set; }

    private void ReturnAction(string action)
    {
        MudDialog.Close(DialogResult.Ok(action));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
<style>
    .mud-dialog-actions{
        justify-content: center !important;
    }
</style>