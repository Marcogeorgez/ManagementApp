<div class="auto-grow-display mud-input-outlined-border ml-10 mr-10 mt-2">
    @if (!string.IsNullOrEmpty(Content))
    {
        @foreach (var part in StringHelper.GetTextAndLinks(Content))
        {
            if (StringHelper.IsLink(part))
            {
                <MudLink Href="@part" Target="_blank">@part</MudLink>
            }
            else
            {
                <span>@part</span>
            }
        }
    }
</div>

<style>
    .auto-grow-display {
        white-space: pre-wrap;
        overflow-wrap: break-word;
        width: inherit;
        min-height: 3rem;
        padding: 0.5rem;
        font-family: inherit;
        font-size: 1rem;
        background-color: inherit;
        resize: none;
    }

</style>


@code {
    [Parameter] public string Content { get; set; }
}
