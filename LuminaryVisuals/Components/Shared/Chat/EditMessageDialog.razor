<style>
    .mud-dialog-content{
        min-width: 25vw;
    }
    .mud-dialog {
        background-color: #161621;
    }

    .mud-dialog-width-md    
    {
        padding: 1% !important;
    }
</style>
<MudDialog>
    <DialogContent>
        <MudContainer Gutters=true >
            <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-5">Edit Message</MudText>

            <MudPaper Class="original-message-container pa-4 my-4" Elevation="0" Style="background-color:#939ae6;">
                <MudText Typo="Typo.body2" Style="color:#efefef">
                    Original Message:
                </MudText>
                <MudText Typo="Typo.body1" Style="color:#efefef">
                    @Message.Content
                </MudText>
            </MudPaper>

            <MudPaper Class="chat-input-area rounded-lg" Elevation="0">
                <MudText Typo="Typo.body2" Align="Align.Center" Style="color:#efefef" class="my-2">
                    New Message
                </MudText>
                <MudTextField @bind-Value="EditedMessage"
                              Class="rounded-lg"
                              Placeholder="Edit your message..."
                              Variant="Variant.Outlined"
                              Immediate="true"
                              Lines="3"
                              AutoFocus="true" />

            </MudPaper>
        </MudContainer>
    </DialogContent>

    <DialogActions>

        <MudItem xs="12" sm="12" md="12" Class="px-4 px-md-11">
            <div class="d-flex justify-center align-center my-5">
                <MudButton Class="px-6 px-md-14"
                           OnClick="SaveEdit"
                           Style="color:#efefef"
                           Variant="Variant.Filled"
                           Disabled="@string.IsNullOrWhiteSpace(EditedMessage)"
                           Size="Size.Medium">
                    Save
                </MudButton>
            </div>
        </MudItem>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Inject]
    private IConfirmationService ConfirmationService { get; set; } = default!;
    [Parameter] public bool isAdminView { get; set; }
    [Parameter] public Message Message { get; set; }
    [Parameter] public string UserId { get; set; }


    private string EditedMessage { get; set; }

    protected override void OnInitialized()
    {
        EditedMessage = Message.Content;
    }

    private async Task SaveEdit()
    {
        if (Message.UserId != UserId && !isAdminView)
        {
            if (await ConfirmationService.Confirm($"Are you sure you want to modify {Message.User.UserName} message ?"))
            {
                MudDialog.Close(DialogResult.Ok(EditedMessage));
            }
            else
            {
                return;
            }
        }
        else
        {
            MudDialog.Close(DialogResult.Ok(EditedMessage));
        }

    }

}