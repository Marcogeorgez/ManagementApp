<MudDialog>
    <DialogContent>
            <MudDatePicker Label="Primary Editor Payment Date"
                           Variant="Variant.Outlined"
                           Date="@(_PrimaryEditorPaymentDate )"
                           DateChanged="@(date => _PrimaryEditorPaymentDate = date ?? null)"
                           Class="" Clearable="true"
                           Required="false" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Color=Color.Error OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Info" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public DateTime? _PrimaryEditorPaymentDate { get; set; }
    [Parameter] public bool IsUrgent { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_PrimaryEditorPaymentDate.HasValue 
            ? DateTime.SpecifyKind(_PrimaryEditorPaymentDate.Value, DateTimeKind.Utc) : (DateTime?)null));

    }

    private void Cancel() => MudDialog.Cancel();
}
<style>
    .mud-dialog-content{
        min-height: 90px;
    }
</style>