<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingValue Value="_drawerOpen">
    <MudLayout>
        <NavMenu @rendermode="InteractiveServer" />
        
        <MudMainContent  Style="height:100vh; overflow: auto;"  >
            @Body
        </MudMainContent>
        <script>
            function submitForm(formId) {
                document.getElementById(formId).submit();
            }
        </script>

    </MudLayout>
</CascadingValue>

