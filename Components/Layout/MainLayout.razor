@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingValue Value="_drawerOpen">
    <MudLayout Class="fixed" >
        <NavMenu @rendermode="InteractiveServer" />
        <MudMainContent>
            @Body
        </MudMainContent>
        <script>
            function submitForm(formId) {
                document.getElementById(formId).submit();
            }
        </script>

    </MudLayout>
</CascadingValue>

@code {
    private bool _drawerOpen = false; // Default state
}