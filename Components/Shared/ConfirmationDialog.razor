<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">
        @Message 
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="Cancel">No</MudButton>
        <MudButton Color="Color.Success" OnClick="Submit">Yes</MudButton>
    </DialogActions>
</MudDialog>
    
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Message { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Close(DialogResult.Ok(false));
}

