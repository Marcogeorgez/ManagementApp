<MudDialog>
    <DialogContent>
        Are you sure you want to change this user to admin ?
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="Cancel">No</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Yes</MudButton>
    </DialogActions>
</MudDialog>
    
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();
}

