@using MudBlazor

<MudDialog>
    <DialogContent> 
        <MudHtmlEditor Html="@Description" HtmlChanged="OnNoteTextChanged">
            <MudHtmlToolbarOptions InsertImage="false" /> 
        </MudHtmlEditor>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@Cancel" Color="Color.Error" Variant="Variant.Filled" Size="Size.Large">Close</MudButton>
        <MudButton OnClick="@Save" Color="Color.Info" Variant="Variant.Filled" Size="Size.Large">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance Dialog { get; set; }

    [Parameter] public string Description { get; set; }
    [Parameter] public EventCallback<string> NewDescription { get; set; }


    private void OnNoteTextChanged(string text)
    {
        Description = text;
    }
    private async Task Save()
    {
        await NewDescription.InvokeAsync(Description); // Pass the new description back
        Dialog.Close(DialogResult.Ok(Description));
    }

    private void Cancel()
    {
        Dialog.Close(DialogResult.Cancel());
    }
}
