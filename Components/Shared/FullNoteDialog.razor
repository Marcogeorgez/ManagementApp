<MudDialog FullScreen="true">
    <DialogContent>
        <MudTextField T="string" Label="Expanded Note" Variant="Variant.Outlined" Lines="10" AutoGrow=true
                      Value="@Text" ValueChanged="OnNoteTextChanged" Immediate="true" />
        <MudHtmlEditor Html="@Text" HtmlChanged="OnNoteTextChanged">
            <MudHtmlToolbarOptions InsertImage="false" />
        </MudHtmlEditor>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">Close</MudButton>
    </DialogActions>
</MudDialog>

@code{
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public EventCallback<string> NoteTextChanged { get; set; }
    private bool success;
    private MudForm form;
    private DateTime _minDate = DateTime.Now.Date;
    private void OnNoteTextChanged(string text)
    {
        Text = text;
        NoteTextChanged.InvokeAsync(text);
    }
    private void Cancel()
    {
        MudDialog.Close(DialogResult.Ok(Text));
    }
}